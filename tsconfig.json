{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./es6",
    "rootDir": ".",
    "allowJs": true
  },
  "exclude": [
    "lib",
    "es6",
    "typings/main.d.ts",
    "typings/main",
    "node_modules"
  ],
  "filesGlob": [
    "./ts/**/*.ts",
    "./test/**/*.ts",
    "typings/main.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
